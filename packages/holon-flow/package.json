{
  "name": "@holon/flow",
  "version": "0.2.1",
  "description": "Universal Flow abstraction with immutable Context and modular architecture",
  "type": "module",
  "sideEffects": false,
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./context": {
      "types": "./dist/context.d.ts",
      "import": "./dist/context.js",
      "default": "./dist/context.js"
    },
    "./module": {
      "types": "./dist/module.d.ts",
      "import": "./dist/module.js",
      "default": "./dist/module.js"
    },
    "./core": {
      "types": "./dist/core.d.ts",
      "import": "./dist/core.js",
      "default": "./dist/core.js"
    },
    "./package.json": "./package.json"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "src",
    "!src/**/*.test.ts",
    "!src/**/*.spec.ts",
    "!src/**/*.bench.ts"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "dev": "tsc -p tsconfig.build.json --watch",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "test:coverage": "vitest run --coverage",
    "bench": "vitest bench",
    "typecheck": "tsc --noEmit",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "clean": "rm -rf dist coverage .turbo"
  },
  "keywords": [
    "flow",
    "context",
    "functional",
    "composition",
    "pipeline",
    "immutable",
    "modules",
    "holon"
  ],
  "author": "Holon Team",
  "license": "MIT",
  "homepage": "https://github.com/holon-flow/holon#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/holon-flow/holon.git",
    "directory": "packages/flow"
  },
  "bugs": {
    "url": "https://github.com/holon-flow/holon/issues"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  }
}
