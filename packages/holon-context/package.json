{
  "name": "@holon/context",
  "version": "0.2.1",
  "description": "Immutable context management for Holon Flow",
  "type": "module",
  "sideEffects": false,
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    }
  },
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "src",
    "!src/**/*.test.ts",
    "!src/**/*.spec.ts"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "dev": "tsc -p tsconfig.build.json --watch",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "clean": "rm -rf dist coverage .turbo"
  },
  "dependencies": {
    "@holon/flow": "workspace:*"
  },
  "devDependencies": {
    "@holon/test-utils": "workspace:*"
  },
  "keywords": [
    "context",
    "immutable",
    "state",
    "holon"
  ],
  "author": "Holon Team",
  "license": "MIT",
  "homepage": "https://github.com/holon-flow/holon#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/holon-flow/holon.git",
    "directory": "packages/context"
  },
  "bugs": {
    "url": "https://github.com/holon-flow/holon/issues"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  }
}
