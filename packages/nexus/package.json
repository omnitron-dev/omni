{
  "name": "@omnitron-dev/nexus",
  "version": "2.0.0",
  "description": "Next-generation dependency injection container for TypeScript - the architectural foundation for any application",
  "author": "LuxQuant",
  "license": "MIT",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./decorators": {
      "types": "./dist/decorators/index.d.ts",
      "default": "./dist/decorators/index.js"
    },
    "./federation": {
      "types": "./dist/federation/index.d.ts",
      "default": "./dist/federation/index.js"
    },
    "./mesh": {
      "types": "./dist/mesh/index.d.ts",
      "default": "./dist/mesh/index.js"
    },
    "./tracing": {
      "types": "./dist/tracing/index.d.ts",
      "default": "./dist/tracing/index.js"
    },
    "./devtools": {
      "types": "./dist/devtools/index.d.ts",
      "default": "./dist/devtools/index.js"
    },
    "./testing": {
      "types": "./dist/testing/index.d.ts",
      "default": "./dist/testing/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc -p ./tsconfig.json",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "typecheck": "tsc --noEmit",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:node": "jest",
    "test:bun": "/Users/taaliman/.bun/bin/bun test test/runtime/bun-all.test.ts",
    "test:deno": "/Users/taaliman/.deno/bin/deno test --no-check --allow-all --unstable-sloppy-imports test/runtime/deno-all.test.ts",
    "test:all": "npm run test:node && npm run test:bun && npm run test:deno",
    "clean": "rm -rf dist",
    "dev": "tsc -p ./tsconfig.build.json --watch"
  },
  "devDependencies": {
    "@omnitron-dev/testing": "workspace:*",
    "@types/bun": "latest",
    "@types/jest": "^30.0.0",
    "@types/node": "24.4.0",
    "jest": "30.1.3",
    "ts-jest": "29.4.1",
    "ts-jest-resolver": "^2.0.1",
    "typescript": "5.9.2"
  },
  "keywords": [
    "di",
    "ioc",
    "dependency-injection",
    "inversion-of-control",
    "container",
    "typescript",
    "nexus",
    "modular",
    "enterprise",
    "microservices",
    "testing",
    "type-safe",
    "zero-reflection",
    "node",
    "bun",
    "deno",
    "esm",
    "cross-platform"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/omnitron-dev/omni.git",
    "directory": "packages/nexus"
  },
  "bugs": {
    "url": "https://github.com/omnitron-dev/omni/issues"
  },
  "homepage": "https://github.com/omnitron-dev/omni/tree/main/packages/nexus#readme",
  "peerDependencies": {
    "reflect-metadata": "^0.2.2"
  },
  "peerDependenciesMeta": {
    "reflect-metadata": {
      "optional": true
    }
  },
  "optionalDependencies": {
    "ws": "^8.18.0"
  }
}
