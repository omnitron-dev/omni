{
  "name": "@kysera/migrations",
  "version": "0.5.1",
  "description": "Database migration management for Kysera ORM with dry-run support and flexible rollback capabilities",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "kysely",
    "orm",
    "migrations",
    "database",
    "typescript",
    "kysera"
  ],
  "author": "Kysera Team",
  "license": "MIT",
  "dependencies": {
    "@kysera/core": "workspace:*"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^24.10.1",
    "@vitest/coverage-v8": "^4.0.15",
    "better-sqlite3": "^12.5.0",
    "kysely": "^0.28.8",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3",
    "vitest": "^4.0.15",
    "zod": "^4.1.13"
  },
  "peerDependencies": {
    "kysely": ">=0.28.8",
    "zod": "^4.1.13"
  },
  "peerDependenciesMeta": {
    "zod": {
      "optional": true
    }
  },
  "sideEffects": false,
  "engines": {
    "node": ">=20.0.0",
    "bun": ">=1.0.0"
  }
}
