{
  "name": "@kysera/timestamps",
  "version": "0.4.1",
  "description": "Automatic timestamp management plugin for Kysera ORM",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src test --ext .ts"
  },
  "keywords": [
    "kysely",
    "orm",
    "timestamps",
    "created_at",
    "updated_at",
    "plugin",
    "typescript"
  ],
  "author": "Kysera Team",
  "license": "MIT",
  "peerDependencies": {
    "kysely": "^0.28.7",
    "@kysera/repository": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "^24.6.2",
    "kysely": "^0.28.7",
    "@kysera/repository": "workspace:*",
    "typescript": "^5.9.3",
    "vitest": "^3.2.4",
    "better-sqlite3": "^12.4.1",
    "@types/better-sqlite3": "^7.6.13",
    "tsup": "^8.5.0",
    "zod": "^4.1.11"
  },
  "sideEffects": false,
  "engines": {
    "node": ">=20.0.0",
    "bun": ">=1.0.0"
  }
}
