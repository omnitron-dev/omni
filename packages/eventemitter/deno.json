{
  "tasks": {
    "test": "deno test --allow-read --allow-write --allow-env --unstable-sloppy-imports test/runtime/deno.test.ts",
    "test:watch": "deno test --allow-read --allow-write --allow-env --unstable-sloppy-imports --watch test/runtime/deno.test.ts",
    "fmt": "deno fmt",
    "lint": "deno lint",
    "check": "deno check src/*.ts test/runtime/deno.test.ts"
  },
  "imports": {
    "@omnitron-dev/common": "../common/src/index.ts"
  },
  "compilerOptions": {
    "allowJs": true,
    "lib": ["deno.window"],
    "strict": true
  },
  "fmt": {
    "include": ["src/", "test/"],
    "exclude": ["node_modules/", "dist/", "coverage/"],
    "indentWidth": 2,
    "lineWidth": 100,
    "singleQuote": true
  },
  "lint": {
    "include": ["src/", "test/"],
    "exclude": ["node_modules/", "dist/", "coverage/"]
  }
}