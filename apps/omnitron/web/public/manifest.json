{
  "name": "Omnitron - Meta-System for Fractal Computing",
  "short_name": "Omnitron",
  "description": "Universal development platform for distributed, reactive, and AI-orchestrated systems",
  "start_url": "/",
  "scope": "/",
  "display": "standalone",
  "orientation": "portrait",
  "theme_color": "#0a0a0a",
  "background_color": "#0a0a0a",
  "dir": "ltr",
  "lang": "en",
  "categories": ["developer", "productivity", "utilities"],
  "icons": [
    {
      "src": "/icons/icon.svg",
      "sizes": "any",
      "type": "image/svg+xml",
      "purpose": "any"
    },
    {
      "src": "/favicon.svg",
      "sizes": "any",
      "type": "image/svg+xml",
      "purpose": "maskable"
    }
  ],
  "screenshots": [
    {
      "src": "/screenshots/desktop-main.png",
      "sizes": "1920x1080",
      "type": "image/png",
      "label": "Omnitron Main Interface"
    },
    {
      "src": "/screenshots/mobile-main.png",
      "sizes": "750x1334",
      "type": "image/png",
      "label": "Mobile View"
    }
  ],
  "prefer_related_applications": false,
  "related_applications": [],
  "shortcuts": [
    {
      "name": "Flow Canvas",
      "short_name": "Canvas",
      "description": "Open Flow Canvas",
      "url": "/canvas"
    },
    {
      "name": "Code Editor",
      "short_name": "Editor",
      "description": "Open Code Editor",
      "url": "/editor"
    },
    {
      "name": "Terminal",
      "short_name": "Terminal",
      "description": "Open Terminal",
      "url": "/terminal"
    },
    {
      "name": "AI Chat",
      "short_name": "Chat",
      "description": "Open AI Chat",
      "url": "/chat"
    }
  ],
  "share_target": {
    "action": "/share",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "name",
      "text": "description",
      "url": "link",
      "files": [
        {
          "name": "file",
          "accept": ["application/*", "text/*", "image/*"]
        }
      ]
    }
  },
  "protocol_handlers": [
    {
      "protocol": "web+omnitron",
      "url": "/protocol?url=%s"
    }
  ]
}