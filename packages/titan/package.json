{
  "name": "@omnitron-dev/titan",
  "version": "0.1.0",
  "description": "Enterprise backend framework built on Nexus DI",
  "keywords": [
    "backend",
    "framework",
    "server",
    "http",
    "rest",
    "graphql",
    "websocket",
    "microservices",
    "dependency-injection",
    "nexus"
  ],
  "author": "LuxQuant",
  "license": "MIT",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./decorators": {
      "types": "./dist/decorators/index.d.ts",
      "default": "./dist/decorators/index.js"
    },
    "./netron": {
      "types": "./dist/netron/index.d.ts",
      "default": "./dist/netron/index.js"
    },
    "./nexus": {
      "types": "./dist/nexus/index.d.ts",
      "default": "./dist/nexus/index.js"
    },
    "./module/redis": {
      "types": "./dist/modules/redis/index.d.ts",
      "default": "./dist/modules/redis/index.js"
    },
    "./module/scheduler": {
      "types": "./dist/modules/scheduler/index.d.ts",
      "default": "./dist/modules/scheduler/index.js"
    },
    "./module/events": {
      "types": "./dist/modules/events/index.d.ts",
      "default": "./dist/modules/events/index.js"
    },
    "./module/config": {
      "types": "./dist/modules/config/index.d.ts",
      "default": "./dist/modules/config/index.js"
    },
    "./module/logger": {
      "types": "./dist/modules/logger/index.d.ts",
      "default": "./dist/modules/logger/index.js"
    },
    "./module/discovery": {
      "types": "./dist/modules/discovery/index.d.ts",
      "default": "./dist/modules/discovery/index.js"
    },
    "./module/notifications": {
      "types": "./dist/modules/notifications/index.d.ts",
      "default": "./dist/modules/notifications/index.js"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsc -p ./tsconfig.json",
    "test": "jest --forceExit",
    "test:node": "jest",
    "test:bun": "/Users/taaliman/.bun/bin/bun test test/runtime/bun-all.test.ts",
    "test:deno": "/Users/taaliman/.deno/bin/deno test --no-check --allow-read --allow-write --allow-env --allow-sys --allow-net --unstable-sloppy-imports test/runtime/deno-all.test.ts",
    "test:all": "npm run test:node && npm run test:bun && npm run test:deno",
    "test:coverage": "jest --coverage",
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit",
    "dev": "tsc -p ./tsconfig.build.json --watch"
  },
  "dependencies": {
    "@omnitron-dev/common": "workspace:*",
    "@omnitron-dev/eventemitter": "workspace:*",
    "@omnitron-dev/messagepack": "workspace:*",
    "@omnitron-dev/smartbuffer": "workspace:*",
    "glob": "^11.0.3",
    "ioredis": "^5.8.0",
    "minimatch": "^10.0.3",
    "msgpackr": "^1.11.5",
    "node-cron": "^4.2.1",
    "pino": "^9.11.0",
    "pino-pretty": "^13.1.1",
    "reflect-metadata": "^0.2.2",
    "semver": "^7.7.2",
    "ws": "^8.18.3",
    "yaml": "^2.8.1",
    "zod": "^4.1.11"
  },
  "devDependencies": {
    "@omnitron-dev/testing": "workspace:*",
    "@types/bun": "latest",
    "@types/jest": "^30.0.0",
    "@types/node": "24.5.2",
    "@types/node-cron": "^3.0.11",
    "@types/pino": "7.0.4",
    "@types/semver": "^7.7.1",
    "@types/ws": "^8.18.1",
    "@typescript-eslint/eslint-plugin": "8.44.0",
    "@typescript-eslint/parser": "8.44.0",
    "jest": "^30.1.3",
    "ts-jest": "^29.4.4",
    "ts-jest-resolver": "^2.0.1",
    "typescript": "^5.9.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "bun": ">=1.2.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/devgrid/titan.git",
    "directory": "packages/titan"
  }
}