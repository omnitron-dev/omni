{
  "name": "@omnitron-dev/netron-browser",
  "version": "0.1.0",
  "description": "Browser-optimized Netron RPC client for seamless backend communication",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "browser": "./dist/index.js",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./client": {
      "types": "./dist/client/index.d.ts",
      "import": "./dist/client/index.js"
    },
    "./client/http": {
      "types": "./dist/client/http-client.d.ts",
      "import": "./dist/client/http-client.js"
    },
    "./client/websocket": {
      "types": "./dist/client/ws-client.d.ts",
      "import": "./dist/client/ws-client.js"
    },
    "./types": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/types/index.js"
    },
    "./errors": {
      "types": "./dist/errors/index.d.ts",
      "import": "./dist/errors/index.js"
    },
    "./utils": {
      "types": "./dist/utils/index.d.ts",
      "import": "./dist/utils/index.js"
    },
    "./packet": {
      "types": "./dist/packet/index.d.ts",
      "import": "./dist/packet/index.js"
    },
    "./middleware": {
      "types": "./dist/middleware/index.d.ts",
      "import": "./dist/middleware/index.js"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest",
    "test:unit": "vitest run",
    "test:integration": "vitest run --config vitest.integration.config.ts",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:serve": "tsx tests/fixtures/serve.ts",
    "test:e2e:build": "tsx tests/fixtures/build.ts",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:e2e",
    "type-check": "tsc --noEmit",
    "lint": "eslint src",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "netron",
    "rpc",
    "browser",
    "client",
    "websocket",
    "http",
    "frontend",
    "typescript",
    "omnitron"
  ],
  "author": "Omnitron Dev",
  "license": "MIT",
  "devDependencies": {
    "@omnitron-dev/titan": "workspace:*",
    "@playwright/test": "^1.56.0",
    "@types/node": "^24.7.0",
    "@types/ws": "^8.18.1",
    "@typescript-eslint/eslint-plugin": "^8.46.0",
    "@typescript-eslint/parser": "^8.46.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "eslint": "^9.37.0",
    "happy-dom": "^19.0.2",
    "http-server": "^14.1.1",
    "pino": "^10.0.0",
    "pino-pretty": "^13.1.2",
    "playwright": "^1.56.0",
    "tsup": "^8.5.0",
    "tsx": "^4.19.0",
    "typescript": "^5.9.3",
    "vitest": "^3.2.4",
    "ws": "^8.18.3"
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "dependencies": {
    "@omnitron-dev/common": "workspace:*",
    "@omnitron-dev/eventemitter": "workspace:*",
    "@omnitron-dev/msgpack": "workspace:*"
  },
  "sideEffects": false
}
