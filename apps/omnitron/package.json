{
  "name": "@omnitron-dev/omnitron",
  "version": "0.1.0",
  "description": "The Meta-System for Fractal Coherent Computing - Universal development platform built on Titan and Aether",
  "private": true,
  "type": "module",
  "keywords": [
    "omnitron",
    "titan",
    "aether",
    "flow",
    "distributed",
    "reactive",
    "metacircular",
    "ai-orchestration"
  ],
  "author": "LuxQuant",
  "license": "MIT",
  "scripts": {
    "build": "pnpm run build:shared && pnpm run build:backend && pnpm run build:web",
    "build:shared": "tsc -p tsconfig.shared.json",
    "build:backend": "tsc -p tsconfig.backend.json",
    "build:web": "vite build",
    "dev": "concurrently \"pnpm:dev:backend\" \"pnpm:dev:web\"",
    "dev:backend": "tsx watch src/main.ts",
    "dev:web": "vite",
    "test": "pnpm run test:backend && pnpm run test:web",
    "test:backend": "NODE_OPTIONS='--experimental-vm-modules' jest --testMatch='**/src/**/*.spec.ts'",
    "test:web": "vitest run --config web/vitest.config.ts",
    "test:watch": "concurrently \"pnpm:test:backend:watch\" \"pnpm:test:web:watch\"",
    "test:backend:watch": "NODE_OPTIONS='--experimental-vm-modules' jest --watch --testMatch='**/src/**/*.spec.ts'",
    "test:web:watch": "vitest watch --config web/vitest.config.ts",
    "typecheck": "pnpm run typecheck:backend && pnpm run typecheck:web",
    "typecheck:backend": "tsc --noEmit -p tsconfig.backend.json",
    "typecheck:web": "tsc --noEmit -p tsconfig.web.json",
    "lint": "eslint src web/src shared --ext .ts,.tsx",
    "lint:fix": "eslint src web/src shared --ext .ts,.tsx --fix",
    "format": "prettier --write \"src/**/*.ts\" \"web/src/**/*.{ts,tsx}\" \"shared/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"web/src/**/*.{ts,tsx}\" \"shared/**/*.ts\"",
    "clean": "rm -rf dist web/dist shared/dist node_modules",
    "start": "pnpm run start:backend",
    "start:backend": "node dist/main.js",
    "start:web": "vite preview"
  },
  "dependencies": {
    "@omnitron-dev/titan": "workspace:*",
    "@omnitron-dev/aether": "workspace:*",
    "@omnitron-dev/common": "workspace:*",
    "@omnitron-dev/eventemitter": "workspace:*",
    "@holon/flow": "workspace:*",
    "@holon/context": "workspace:*",
    "@holon/effects": "workspace:*",
    "reflect-metadata": "^0.2.2",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@omnitron-dev/testing": "workspace:*",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.7.2",
    "@typescript-eslint/eslint-plugin": "^8.46.1",
    "@typescript-eslint/parser": "^8.46.1",
    "@vitest/ui": "^3.2.4",
    "concurrently": "^9.2.1",
    "eslint": "^9.37.0",
    "jest": "^30.2.0",
    "prettier": "^3.6.2",
    "ts-jest": "^29.4.5",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "vite": "^7.1.10",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=22.0.0",
    "pnpm": ">=9.0.0",
    "bun": ">=1.2.0"
  }
}