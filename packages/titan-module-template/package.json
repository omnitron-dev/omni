{
  "name": "@omnitron-dev/titan-module-template",
  "version": "0.1.0",
  "description": "Template for creating Titan framework modules",
  "keywords": [
    "titan",
    "module",
    "template",
    "dependency-injection",
    "nexus"
  ],
  "author": "LuxQuant",
  "license": "MIT",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./decorators": {
      "types": "./dist/decorators/index.d.ts",
      "default": "./dist/decorators/index.js"
    },
    "./services": {
      "types": "./dist/services/index.d.ts",
      "default": "./dist/services/index.js"
    },
    "./types": {
      "types": "./dist/types.d.ts",
      "default": "./dist/types.js"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsc -p ./tsconfig.json",
    "test": "NODE_OPTIONS='--experimental-vm-modules' jest --runInBand --forceExit",
    "test:watch": "NODE_OPTIONS='--experimental-vm-modules' jest --watch",
    "test:coverage": "NODE_OPTIONS='--experimental-vm-modules' jest --coverage",
    "clean": "rm -rf dist",
    "dev": "tsc -p ./tsconfig.json --watch"
  },
  "dependencies": {
    "@omnitron-dev/common": "workspace:*",
    "@omnitron-dev/titan": "workspace:*",
    "pino": "^9.9.5",
    "reflect-metadata": "^0.2.2",
    "zod": "^4.1.8"
  },
  "devDependencies": {
    "@jest/globals": "^30.1.2",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.5.0",
    "jest": "^30.1.3",
    "ts-jest": "^29.4.2",
    "ts-jest-resolver": "^2.0.1",
    "typescript": "^5.9.2"
  },
  "peerDependencies": {
    "@omnitron-dev/titan": "workspace:*"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/omnitron-dev/omni.git",
    "directory": "packages/titan-module-template"
  }
}
