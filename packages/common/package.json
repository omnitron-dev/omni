  "license": "MIT",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "module": "./dist/esm/index.js",
  "exports": {
    ".": {
      "require": "./dist/index.js",
      "import": "./dist/esm/index.js",
      "types": "./dist/index.d.ts"
    },
    "./cuid": {
      "require": "./dist/cuid.js",
      "import": "./dist/esm/cuid.js",
      "types": "./dist/cuid.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc -p ./tsconfig.build.json && tsc -p ./tsconfig.esm.json",
    "test": "jest",
    "test:node": "jest",
    "test:bun": "bun test test/primitives.spec.ts test/list-buffer.spec.ts test/entries.spec.ts test/omit.spec.ts test/predicates.spec.ts test/promise.spec.ts test/timed-map-bun-compat.spec.ts",
    "test:all": "npm run test:node && npm run test:bun"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/jest": "^30.0.0",
    "@types/node": "24.3.3",
    "jest": "30.1.3",
    "ts-jest": "29.4.1",
    "typescript": "5.9.2"
  },
  "keywords": [
    "utils",
    "common",
    "helpers",
    "typescript",
    "utilities",
    "predicates",
    "type-checking",
    "validation",
    "primitives",
    "functions",
    "browser",
    "node",
    "cross-platform",
    "type-guards",
    "utility-functions",
    "timed-map"
