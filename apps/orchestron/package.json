{
  "name": "orchestron",
  "version": "0.1.0",
  "description": "Comprehensive development orchestration system with multi-agent coordination and ML-powered analytics",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "orchestron": "./dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/index.ts",
    "test": "vitest",
    "test:run": "vitest run",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src --ext .ts",
    "typecheck": "tsc --noEmit",
    "link:global": "npm run build && npm link",
    "start": "npm run build && node dist/cli.js",
    "mcp:server": "npm run build && node dist/mcp/server.js",
    "mcp:dev": "tsx src/mcp/server.ts",
    "dashboard": "npm run build && node dist/dashboard/server.js",
    "dashboard:dev": "tsx src/dashboard/server.ts",
    "dashboard:build": "tsc src/dashboard/server.ts --outDir dist/dashboard --module commonjs --target es2020"
  },
  "keywords": [
    "orchestration",
    "development-management",
    "multi-agent",
    "task-tracking",
    "project-management",
    "ml-analytics"
  ],
  "author": "Orchestron Team",
  "license": "MIT",
  "dependencies": {
    "@fastify/cors": "^11.1.0",
    "@fastify/static": "^8.2.0",
    "@modelcontextprotocol/sdk": "^1.0.0",
    "@types/ws": "^8.18.1",
    "better-sqlite3": "^12.4.1",
    "chalk": "^5.6.2",
    "commander": "^14.0.1",
    "cors": "^2.8.5",
    "date-fns": "4.1.0",
    "eventemitter3": "^5.0.1",
    "fastify": "^5.6.1",
    "idb": "8.0.3",
    "pino": "^9.11.0",
    "pino-pretty": "^13.1.1",
    "socket.io": "^4.6.1",
    "uuid": "13.0.0",
    "ws": "^8.18.3",
    "zod": "4.1.11"
  },
  "devDependencies": {
    "@types/better-sqlite3": "7.6.13",
    "@types/cors": "^2.8.17",
    "@types/node": "24.5.2",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "8.44.1",
    "@typescript-eslint/parser": "8.44.1",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "3.2.4",
    "eslint": "9.36.0",
    "happy-dom": "^18.0.1",
    "jest": "30.1.3",
    "ts-jest": "29.4.4",
    "tsx": "4.20.6",
    "typescript": "5.9.2",
    "vitest": "3.2.4"
  }
}
